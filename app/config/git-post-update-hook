#!/bin/bash

echo '-----------------------------------------------'
echo '------------------- GIT -----------------------'
echo '-----------------------------------------------'

git reset --merge HEAD
git pull
git submodule sync
git submodule init
git submodule update

echo '-----------------------------------------------'
echo '--------------- CAKE MIGRATE ------------------'
echo '-----------------------------------------------'

./cake migrate

echo '-----------------------------------------------'
echo '----------------- ACL EXTRAS ------------------'
echo '-----------------------------------------------'

./cake acl_extras aco_sync

echo '-----------------------------------------------'
echo '---------------- CLEAR CACHE ------------------'
echo '-----------------------------------------------'
./cc

echo '----------------- COMPLETE --------------------'
