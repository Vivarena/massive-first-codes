#!/bin/bash

cd public_html

echo '-----------------------------------------------'
echo '------------------- GIT -----------------------'
echo '-----------------------------------------------'

git reset --hard HEAD
git pull
git submodule sync
git submodule init
git submodule update

echo '-----------------------------------------------'
echo '--------------- CAKE MIGRATE ------------------'
echo '-----------------------------------------------'

./cake migrate

echo '-----------------------------------------------'
echo '---------------- CLEAR CACHE ------------------'
echo '-----------------------------------------------'
./cc